<Window x:Class="ejer1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejer1"
        mc:Ignorable="d"
        Title="Tabla de multiplicar" Height="560" Width="400">
    <Grid>
        <StackPanel Orientation = "Vertical" Margin = "16" HorizontalAlignment="Center"  >

            <TextBlock Text = "Tabla de multiplicar ❌" FontSize ="16" HorizontalAlignment = "Center" Margin = "10"/>
            <TextBlock Text = "Digita un numero: " FontSize = "12" >

            <TextBox Text = ""  Height="30" Width="80" Margin="0,0,0,-10" VerticalContentAlignment="Center" x:Name ="NumeroDigitado"/>

                <Button Content="Calcular" Width="60" Height="30" Margin="0,0,0,-10" Click="btnCarcular"/>
                <Button Content="Nuevo" Width="60" Height="30" Margin="0,0,0,-10" Click="btnNuevo"/>

            </TextBlock>

            <TextBlock Text = "Resultados" FontSize="16" Margin = "16" />

            <ListBox x:Name="ListaTabla" Width="270" Height="340" FontSize="22"/>

        </StackPanel>
    </Grid>
</Window>
